!! Caps as Escape
!!remove lock = Caps_Lock
!!keycode 66 = Escape

!! Permet d'intervertir Caps et Escape
remove lock = Caps_Lock
keycode 9 = Caps_Lock
!!keycode 66 = Escape
add lock = Caps_Lock

!! Permet de se servir de la touche Caps comme d'une touche Control
remove lock = Caps_Lock
remove Control = Control_L
keycode 66 = Control_L
add Control = Control_L

!! intervertit Shift_L et Control_L
!!remove Shift = Shift_L
!!remove Control = Control_L
!!keycode 50 = Control_L
!!keycode 37 = Shift_L
!!add Control = Control_L
!!add Shift = Shift_L
!
